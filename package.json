{
  "name": "@47ng/cloak",
  "version": "0.15.1",
  "description": "Serialized AES-GCM 256 encryption, decryption and key management in the browser & Node.js",
  "main": "dist/index.js",
  "bin": {
    "cloak": "./dist/cli.js"
  },
  "license": "MIT",
  "author": {
    "name": "Fran√ßois Best",
    "email": "contact@francoisbest.com",
    "url": "https://francoisbest.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/47ng/cloak"
  },
  "keywords": [
    "cryptography",
    "aes-256-gcm"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest --verbose",
    "test:watch": "jest --verbose --watch",
    "test:browser": "parcel ./test/index.html",
    "dev": "nodemon -e ts,.env -w .env -w . -x 'run-s build:ts test'",
    "link:cli": "chmod +x ./dist/cli.js && ln -s $(pwd)/dist/cli.js ./node_modules/.bin/cloak",
    "build:clean": "rm -rf ./dist && rm -f ./node_modules/.bin/cloak",
    "build:ts": "tsc",
    "build": "run-s build:clean build:ts",
    "ci": "run-s test build"
  },
  "dependencies": {
    "@47ng/codec": "^0.4.0",
    "@stablelib/base64": "^1.0.0",
    "@stablelib/hex": "^1.0.0",
    "@stablelib/utf8": "^1.0.0",
    "chalk": "^3.0.0",
    "commander": "^5.0.0",
    "dotenv": "^8.2.0",
    "s-ago": "^2.1.0"
  },
  "devDependencies": {
    "@types/jest": "^25.1.1",
    "@types/node": "^13.1.8",
    "husky": "^4.0.10",
    "jest": "^25.1.0",
    "jest-extended": "^0.11.2",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "ts-jest": "^25.2.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "roots": [
      "<rootDir>/src"
    ],
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn ci"
    }
  }
}
